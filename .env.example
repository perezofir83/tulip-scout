# Environment Configuration
ENV=development

# Database
DATABASE_URL=sqlite:///./tulip_scout.db

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key_here

# Gmail API
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.pickle

# Rate Limiting (LinkedIn Premium)
LINKEDIN_DAILY_LIMIT=40
LINKEDIN_HOURLY_LIMIT=10
LINKEDIN_MIN_DELAY_SECONDS=10
LINKEDIN_MAX_DELAY_SECONDS=15

# Regional Settings
TARGET_REGIONS=Poland,Czech Republic,Romania,Japan,South Korea,Singapore,Hong Kong

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Dashboard Settings
DASHBOARD_PORT=8501
